{
  "name": "noteeees",
  "displayName": "Noteeees",
  "description": "Simple markdown notes extension",
  "version": "0.0.14",
  "publisher": "HidenobuNagai",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hidenobunagai/noteeees.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "notes.addEntry",
        "title": "Noteeees: Add Entry"
      },
      {
        "command": "notes.quickAdd",
        "title": "Noteeees: Quick Add"
      },
      {
        "command": "notes.openMemory",
        "title": "Noteeees: Open Memory"
      },
      {
        "command": "notes.search",
        "title": "Noteeees: Search"
      },
      {
        "command": "notes.structureSearch",
        "title": "Noteeees: Structure Search"
      },
      {
        "command": "notes.showReminders",
        "title": "Noteeees: Show Reminders"
      },
      {
        "command": "notes.runSetup",
        "title": "Noteeees: Run Setup"
      },
      {
        "command": "notes.refreshSidebar",
        "title": "Noteeees: Refresh Sidebar",
        "icon": "$(refresh)"
      }
    ],
    "keybindings": [
      {
        "command": "notes.quickAdd",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n"
      },
      {
        "command": "notes.addEntry",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      },
      {
        "command": "notes.search",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus && resourceFilename == memory.md"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "notesExplorer",
          "name": "Noteeees",
          "icon": "$(notebook)",
          "contextualTitle": "Memory Notes"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "notes.refreshSidebar",
          "when": "view == notesExplorer",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Noteeees",
      "properties": {
        "notes.notesDirectory": {
          "type": "string",
          "default": "",
          "scope": "machine",
          "description": "Directory where notes are stored. If empty, the extension will prompt to select a folder on first use."
        },
        "notes.dateFormat": {
          "type": "string",
          "default": "YYYY-MM-DD HH:mm",
          "enum": [
            "YYYY-MM-DD HH:mm",
            "YYYY-MM-DD",
            "MM/DD/YYYY HH:mm",
            "DD.MM.YYYY HH:mm"
          ],
          "description": "Date format for new entries."
        },
        "notes.entryPosition": {
          "type": "string",
          "default": "top",
          "enum": [
            "top",
            "bottom"
          ],
          "description": "Where to insert new entries in the memory file."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
